        xmlns:local="clr-namespace:HW_01_WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <!--<StackPanel Orientation="Vertical" HorizontalAlignment="Left" Height="300">

       
    </StackPanel>-->
    
    <DockPanel >
        <WrapPanel Margin="6,0,-5.667,0" DockPanel.Dock="Top">

            <Button Content="Creat" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
            <Button Content="Edit" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
            <Button Content="Delete" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
            <Button Content="Save" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
