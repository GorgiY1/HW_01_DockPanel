            <Button Content="Open" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
            <Button Content="Exit" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>
            <Button Content="Session termination" VerticalAlignment="Top" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="120" MaxWidth="150"/>

        </WrapPanel>

        <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
            <Button Content="Mail" HorizontalAlignment="Left" Margin="5"  MinHeight="30" MaxHeight="40" MinWidth="75" MaxWidth="150"/>
            <Button Content="Calendar" HorizontalAlignment="Left" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="75" MaxWidth="150"/>
            <Button Content="Tasks" HorizontalAlignment="Left" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="75" MaxWidth="150"/>
