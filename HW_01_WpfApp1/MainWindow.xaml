            <Button Content="Mail" HorizontalAlignment="Left" Margin="5" MinHeight="30" MaxHeight="40" MinWidth="75" MaxWidth="150"/>

        </StackPanel>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" 
                 MaxWidth="500" MaxHeight="500">
            <StackPanel>
                <Label>9:00 Start Lesson (Morning)</Label>
                <Label>10:25 Pause</Label>
                <Label>10:35 Begining second Lesson</Label>
                <Label>12:00 End Lessons</Label>
                <TextBox TextWrapping="Wrap" HorizontalAlignment="Left" 
                 MinWidth="200" MinHeight="200">
                    
                </TextBox>
                
            </StackPanel> 
            
        </TextBlock>


    </DockPanel>

